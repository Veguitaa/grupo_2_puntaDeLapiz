<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body class="productos">
        
        <%- include('./partials/header') %>

            <main>
               

                    <section class="tienda__tienda">
                        <section>
                            <div class="container__tienda">
                                <h1><%= title %> <%= search %> </h1>
                               
                            </div>
                        </section>
                        
                      
                            <div class="slide-container">
                            <section class="container_tienda" id="store-products">
                                <% productos.forEach (producto => { %>
                            <div class="store-product__tienda  <%= producto.categoriaId%>">
                                <img src="/img/productsimg/<%= producto.imagen %> " alt="">
                                <div class="product-details__tienda ">
                                    <h2><%= producto.nombre %></h2>
                                    <p> <span></span> $ <%= producto.precio %></p>
                                    <a href="#">carrito</a>
                                    <a href="/product/<%= producto.id %> ">detalles</a>
                                </div>
                            </div>
                            <% }) %>
                        </section>
                
                
                    </div>


                    <% if (!productos.length) { %>
                        
                            <section class="sinResultados">
                               
                                <div class="data">
                                    <h2 class="dont">No se encontraron resultados!</h2>
                                </div>

                                <div class="image">
                                    <img src="/img/sin_resultados.jpg" alt="">
                                </div>
                            </section>
                       
                        <% } %>
                </section>

















                                    
                   
        
             
            </main>

    </body>
</html>